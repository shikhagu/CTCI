// Tracking local minimum

public class StackWithMin extends Stack<Integer>{
  public int getMin(){
    if(top == null)
      throw EmptyStackException();
    return top.min;
  }
  
  public void push(int item){
    StackNode<Integer> node = new StackNode<Integer>(item, min(item));
    node.next = top;
    top = node;
  }
  
  private int min(int item){
    if(isEmpty())
      return item;
    return Math.min(item, top.min);
  }
  
}
