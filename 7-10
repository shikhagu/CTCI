// Minesweeper

public class Minesweeper{
  private Grid grid;
  private Player player;
  
  public Minesweeper(int row, int col, String playerDetails){
    this.grid = new Grid(row, col);
    this.player = new Player(playerDetails);
  }
}

public class Grid{
  private Cell[][] grid;
  
  public boolean isBomb(int row, int col);
  public boolean isCompleted();
  public Grid generateGrid(int numRows, int numCols); // sets bombs etc.
  public boolean expandNeighbors(int row, int col);
  
  public Grid(int row, int col){
    this.grid = generateGrid(row, col);
  }
}

public class Cell{
  private CellType type;
  private int number;
}

public enum CellType{
  BLANK, NUMBER, BOMB;
}

public class Player{
  String details;
}
